<div class="container">
    <div class="jumbotron">
        <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcT7vSPycP6u1_giLsq9n-5mIyLnNIyawxuo3oL2ptAZ36jRkcwsog" width="auto" height="auto">
        <h1>Eat-Da-Burger!</h1>
    </div>

    <div class="row">

        <div class="col-md-4 col-md-offset-1">
	        <div class="panel-panel default">
                <h2>Burgers that are not devoured</h2>
                    <ul class="list-group">
                    {{#each burgers}}
                        {{#unless devoured}}
                        <li>
                            <div>
                                <p>{{burger_name}}</p>
                                <span class="input-group-btn">
                                    <form action="burgers/update/{{id}}?_method=PUT" method="POST">
                                        <input type="hidden" name="devoured" value="true">
                                        <button class="btn btn-default btn-lg" type="submit">Devour It!</button>
                                    </form>
                                </span>
                            </div>
                        </li>
                        {{/unless}}
                    {{/each}}
                    </ul>
	        </div>
        </div>    
    
        <div class="col-md-4 col-md-offset-2">  
            <h2>Devoured Burgers</h2>
                <div class="panel panel-default">
                    <ul class="list-group">
                        {{#each burgers}}
                            {{#if devoured}}
                            <li class="list-group-item">
                                <p>{{burger_name}}</p>
                            </li>
                            {{/if}}
                        {{/each}}
                    </ul>
                </div>
        </div>

        <div class="col-md-10-col-md-offset-1">
            <h2>Add a Burger</h2>
            <form class="create-form">

            <div class="form-group">
                <label for="ca">Burger Name:</label>
                <input type="text" id="ca" name="burger_name">
            </div>

            <div class="form-group">
                <label for="slee">Sleepy?</label><br>
                <input type="radio" name="sleepy" value="1" checked> Sleepy!<br>
                <input type="radio" name="sleepy" value="0"> Awake
            </div>

            <button class="btn btn-default btn-lg" type="submit">Add Burger</button>
            </form>
        </div>
        
    </div>    
    
</div>